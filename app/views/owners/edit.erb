<h1>Update Owner</h1>

<form action="/owners/<%=@owner.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Owner's Name:</label>

    <br>

    <input type="text" name="owner[name]" value="<%=@owner.name%>">
    <p>Select an existing pet or create a new one below.</p>

    <h3>Existing Pets</h3>
    <% @pets.each do |pet| %>
            <input 
                type="checkbox" 
                name="owner[pet_ids][]" 
                id="<%= pet.id %>" 
                value="<%= pet.id %>"
                <%= "checked" if @owner.pets.include?(pet) %>
            >
            <%= pet.name %>
            <br>
    <% end %>
    <br>

    <h3>and/or create a new pet:</h3>
    <label>Pet's Name:</label><br>
    <input type="text" name="pet[name]" id="pet_name">
    <br><br>

    <input type="submit" value="Update Owner">
</form>


